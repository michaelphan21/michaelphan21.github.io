@font-face {
  font-family: myFirstFont;
  src: url(fonts/aqua.ttf);
}

html {
  width: 100%;
  height:100%;
	margin: 0; 
	padding: 0;   
}

body {
	/* or 2vw */
	padding: 50px 0 0 0;
 /*  font-size: calc(12px + (60 - 12) * ((100vw - 300px) / (2000 - 300))); */
 /* line-height: calc(1.3em + (1.5 - 1.2) * ((100vw - 300px)/(2000 - 300))); */ 
}

.navbar{
	display:none;
}

.logo
{
	margin: 0 0 2% 0; 
}

#fullname {
	font-family: myFirstFont;
 	text-align: center;	
	font-size: 3.2vw;
}

#fullname a {
  text-decoration:none;
}

#firstname {
	color: black;
}

#lastname {
	color: red;
}

.page_divider {
	font-family: myFirstFont;
	border-bottom: 2px solid black;	
	height: 18px; /* TODO */
	margin: 0 20% 0 20%; 
 	text-align: center;			
	
}

#header_list {
	font-size: 1.5vw;
	padding: 0 2% 0 2%; 	
	background-color: #FFFFFF; 
}

button {
	background:none;
	border:none;
	outline-style:none;
}

.active {
	color: red;	
}

.content {
	border: 1px solid black;
	font-family: myFirstFont;
	margin: 2% 25% 2% 25%;
 	text-align: center;			
}

.mySlides {
	display:none;
}	

#left_arrow button {
	margin: auto 0 0 0;
}

#right_arrow button {
	margin: auto 0 0 0;
}

p {
	font-family: sans-serif;
	font-size: 0.75vw;
	text-align: left;	
}

.abtopic {
	font-size: 2vw; /* 35 */
	font-family: normal;	
}

.footer {
	width: 100%;
	margin:50px 0 50px 0;
	text-align:center;
}

.section {
	margin: 0 0 25px 0;
	height: 100%;
	text-align: center;
}

.section > p {
	font-size: 20px;
}


/* Extra Small and Small devices (landscape phones, 767 and down) */
@media (max-width: 767.98px) { 
	body {
		padding: 70px 0 0 0;	
	}	
	
	.logo, .canvas .page_divider, #header_list {
		display:none;	
	}

	.navbar {
		font-family: myFirstFont;
		display:block;
	}
	
	.container, .navbar-header > button {
		margin: auto;
		width: 100%;
		padding: 0 0 0 0;
		text-align:center;
	}
	
	.container {
		background-color: white;	
	}
	
	#fullname {
		margin: 15px 0 0 0;	
		font-size: 25px;
	}
	
	.toggle_divider {
		border-bottom: 1px solid black;
		margin: 0 47% 0 47%;		
	}
	
	.abtopic, .restopic {
		text-align: center;
		font-family: normal;
		font-size: 6.5vw;	
	}
	
	.content p {
		text-align: center;
		font-family: sans-serif;
		font-size: 15px;		
	} 
	
	.content {
		margin: auto;
		padding: auto;
		width: 95%;
		text-align:center;
	}

	#left_arrow button {
		margin: auto 0 0 auto;
	}

	#right_arrow button {
		margin: auto auto 0 0;
	}
}